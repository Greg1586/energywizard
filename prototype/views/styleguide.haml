        %label{:for=>"Option2"} This is a radio option
      .checkbox
        %input{:type=>"radio", :id=>"styleguideRadio3", :name=>"styleguideRadio", :class=>"styleguideRadio"}
        %label{:for=>"Option3"} This is a radio option
    %h3
      %b Checkboxes
    %form
      .checkbox
        %input{:type=>"checkbox", :name=>"styleguideCheckbox", :class=>"styleguideCheckbox"}
        %label{:for=>"Option1"} This is a checkbox option
      .checkbox
        %input{:type=>"checkbox", :name=>"styleguideCheckbox", :class=>"styleguideCheckbox"}
        %label{:for=>"Option2"} This is a checkbox option
      .checkbox
        %input{:type=>"checkbox", :name=>"styleguideCheckbox", :class=>"styleguideCheckbox"}
        %label{:for=>"Option3"} This is a checkbox option
    %br
    %h2
      %b Buttons
    %a.button{:href=>"/battery"}
      This is a Primary Button
    %a.button.secondary{:href=>"/battery"}
      This is a secondary button
    %a.button.tertiary{:href=>"/battery"}
      This is a tertiary button
    %br
