.content-area-1
  %h1 Are you installing Wind or Hydro?
.content-parent
  .content-area-1
    .toggler-group
      .radio-1 Yes
      .toggler1
      .radio-2.radio-toggle-alt No

    .radio-content-1.hidden.show-class
      %h2 Please tell us about your system
      .checkbox
        %input{:type=>"checkbox", :id=>"solar", :class=>"windQuery"}
        %label{:for=>"solar"} Wind
      .checkbox
        %input{:type=>"checkbox", :id=>"battery", :name=>"", :class=>"hydroQuery"}
        %label{:for=>"battery"} Hydro

    .wind-content.hidden
      %h3 What inverter do you plan to use for your wind system?
      .text-input
        %form
          %label Inverter manufacturer
          %input

          %label Inverter model
          %input

          %label Quantity
          %input

    .hydro-content.hidden
      %h3 What inverter do you plan to use for your hydro system?
      .text-input
        %form
          %label Inverter manufacturer
          %input

          %label Inverter model
          %input

          %label Quantity
          %input

  .button-area-1
    %a.button{:href=>"/battery"}
      Next
    %a.button.tertiary{:href=>"/solar"}
      go back