        .extra-inverter1.hidden
          .text-input
            %form
              %label Battery inverter manufacturer
              %input
              %label Battery inverter model
              %input
            .phase
              %label Which phase will this inverter go on?
              %select
                %option{:value=>"1"} A
                %option{:value=>"2"} B
                %option{:value=>"3"} C
            %form.quantity
              %div
                %label Quantity
                %input
              .remove-inverter
                .button.secondary remove this inverter
          .add-inverter
            %h3 add another battery inverter
            %a.plus-button{:type=>"checkbox", :id=>"monthly", :name=>"switch", :checked=>"checked", :class=>"inverterToggler2"}
              .plus +
        .extra-inverter2.hidden
          .text-input
            %form
              %label Battery inverter manufacturer
              %input
              %label Battery inverter model
              %input
            .phase
              %label Which phase will this inverter go on?
              %select
                %option{:value=>"1"} A
                %option{:value=>"2"} B
                %option{:value=>"3"} C
            %form.quantity
              %div
                %label Quantity
                %input
              .remove-inverter
                .button.secondary remove this inverter

