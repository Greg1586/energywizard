- content_for :title do
	Calculators
- content_for :bodyClass do
	calculator

%h1 Repayment Calculator

.calculator-wrapper
	%form
		.form-main
			.form-section
				%label Product Name
				%br
				%select{:id=>"product-selector"}
					%option Select a Product
					%option Back to Basics
					%option Standard Variable
					%option Access Equity
					%option Fixed Rate Loan
					%option Home Package Plus
			.form-section
				%label 
					Interest Rate
					%sup *
				%br
				.text-input-icon-wrapper.percent-pa
					%input.after-content{:type=>"text", :id=>"interest-rate",  :placeholder=>""}

					
			.form-section
				%label 
					Loan Amount
					%sup *
				%br
				.text-input-icon-wrapper.money
					%input{:type=>"text", :id=>"loan-amount", :value=>""}

			.form-section
				%label 
					Loan Term
					%sup *
				%br
				.text-input-icon-wrapper.years
					%input{:type=>"text", :id=>"loan-term", :placeholder=>""}


		.form-secondary

			.form-section
				%h4 Repayment Frequency
				.options-set
					%input{:type=>"radio", :id=>"monthly", :name=>"payment-freq", :value=>"monthly", :checked=>"checked"} 
					%label.radio-label{:for=>"monthly"} Monthly
				
					%input{:type=>"radio",:id=>"fortnightly", :name=>"payment-freq", :value=>"fortnightly"} 
					%label.radio-label{:for=>"fortnightly"} Fortnightly
				
					%input{:type=>"radio", :id=>"weekly", :name=>"payment-freq", :value=>"weekly"} 
					%label.radio-label{:for=>"weekly"} Weekly

			
			.form-section
				%h4 Repayment Type
				.options-set
					%input{:type=>"radio", :id=>"principal", :name=>"payment-type", :checked=>"checked"} 
					%label.radio-label{:for=>"principal"} Principal + Interest
					%input{:type=>"radio", :id=>"interest", :name=>"payment-type"} 
					%label.radio-label{:for=>"interest"}  Interest Only


	.alternate-options	
		.header-toggle
			Calculate More Options to Save.
		.alternate-content
			.form-main
				%form
					.form-section
						%label 
							Extra Repayment Amout
							%sup *
						%br
						.text-input-icon-wrapper.money
							%input{:type=>"text", :id=>"repayment-amount", :value=>""}

					.form-section
						%label 
							Offset Account Amount
							%sup *
						%br
						.text-input-icon-wrapper.money
							%input{:type=>"text", :id=>"offset-amount", :placeholder=>""}

					.form-section
						%label 
							Lump Sum Amount
							%sup *
						%br
						.text-input-icon-wrapper.money
							%input{:type=>"text", :id=>"lump-sum-amount", :value=>""}
						
					.form-section
						%label 
							Lump Sum Year
							%sup *
						%br
						.text-input-icon-wrapper.years
							%input{:type=>"text", :id=>"lump-sum-year", :placeholder=>""}
			.form-secondary

				.form-section
					%h4 Repayment Frequency
					.options-set
						%input{:type=>"radio", :id=>"monthly2", :name=>"payment-freq2", :value=>"monthly2", :checked=>"checked"} 
						%label.radio-label{:for=>"monthly2"} Monthly
					
						%input{:type=>"radio",:id=>"fortnightly2", :name=>"payment-freq2", :value=>"fortnightly2"} 
						%label.radio-label{:for=>"fortnightly2"} Fortnightly
					
						%input{:type=>"radio", :id=>"weekly2", :name=>"payment-freq2", :value=>"weekly2"} 
						%label.radio-label{:for=>"weekly2"} Weekly
						
			#savings-results
				.form-section
					.icon-money
					%label Interest Saved
					%output $21,823
				.form-section
					.icon-time
					%label Time Saved
					%output 10 years

	.results-wrapper
		.options-set
			%input{:type=>"radio", :id=>"house", :name=>"results-display", :value=>"house", :checked=>"checked"} 
			%label.radio-label{:for=>"house"} 
				.icon-home.icon
		
			%input{:type=>"radio",:id=>"graph", :name=>"results-display", :value=>"graph"} 
			%label.radio-label{:for=>"graph"} 
				.icon-bar-chart.icon
		
			%input{:type=>"radio", :id=>"tags", :name=>"results-display", :value=>"tags"} 
			%label.radio-label{:for=>"tags"} 
				.icon-tags.icon

			.results-display.house-content
				.icon-sun
				#big-home-animation

				.data-wrapper
					.form-section
						%label Outstanding
						%output $123,456 
					.form-section
						%label Principal
						%output $123,456 
					.form-section
						%label Interest
						%output $123,456 
				%input{:type=>"range",:id=>"results-display-range", :name=>"results-range", :min=>"0", :max=> "30", :value=>"0",:onchange=>"rangevalue.value=value"}
				.input-data
					%output#rangevalue 0
					#min 0
					#max 30

			.results-display.graph-content
				.key
					.primary
						%span Principal
					.secondary
						%span Owing
				.triangle-graph-primary
					.x-axis
						%ul

							%li 0
							%li 50
							%li 100
					.y-axis
						%ul
							%li 100
							%li 50
					.triangle-graph-secondary

			.results-display.tag-content
				%h2 Back to Basics Home Loan
				%p Our Back to Basics Home Loan offers you a great loan, without the expense of any unwanted extras.
				%ul.proof-points
					%li Enjoy a low variable rate
					%li No monthly account keeping fees
					%li And the flexibility of making additional payments.
				%button.green Learn More

	.results-sidebar
		.form-section
			%label Fixed Repayment
			%output $123,456 
			%span / Monthly
		.form-section
			%label Ongoing Repayment
			%output $12,345
			%span / Monthly
		.form-section
			%label Total Interest Payable
			%output $123,456 
			%span / 30 years
		.results-call-to-action
			%p Like what you see? Read this call to action and click this button. Hooray.
			%button.red
				Apply Now
						

